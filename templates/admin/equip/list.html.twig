{% extends 'base.html.twig' %}

{% block title %}Llistat d'equips{% endblock %}

{% block body %}
{{ include('navbaradmin.html.twig') }}
<div style="margin-top:200px">
        <h1>Llistat d'equips</h1>
        <a class="btn btn-success" href="{{ path('equip_new') }}">+ Nou equip</a>
        <br><br>
        {% for message in app.flashes('notice') %}
              <strong><i> {{ message }} </i></strong>
        {% endfor %}

          <table class="table table-hover table-dark table-bordered" style="margin-top: 20px;margin-bottom: 10px;">
              <thead>
                  <tr>
                      <th>Usuari</th><th>Accions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for equip in equips %}
                      <tr>
                          <td>{{ equip.getUsuari.Username }}</td>
                          <td>
                            <a class="btn btn-primary" href="{{ path('equip_edit', {'id': equip.id}) }}">Editar</a>
                            <a class="btn btn-danger" href="{{ path('equip_delete', {'id': equip.id}) }}" onclick="return eliminar('{{ equip.id }}')">Eliminar</a>
                          </td>
                      </tr>
                  {% else %}
                      <tr>
                          <td colspan="5">No hi ha equip.</td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>

          <br>
</div>
{% endblock %}