{% extends 'base.html.twig' %}

{% block title %}Llistat d'equips{% endblock %}
{% block javascripts %}
  <script src="{{ asset('js/backoffice.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
        <h1>Llistat d'equips</h1>
        <a href="{{ path('equip_new') }}">+ Nou equip</a>
        <br><br>
        {% for message in app.flashes('notice') %}
              <strong><i> {{ message }} </i></strong>
        {% endfor %}

          <table style="margin-top: 20px;margin-bottom: 10px;">
              <thead>
                  <tr>
                      <th>Usuari</th>
                  </tr>
              </thead>
              <tbody>
                  {% for equip in equips %}
                      <tr>
                          <td>{{ equip.getUsuari.Username }}</td>
                          <td>
                          <a href="{{ path('equip_add', {'id': equip.id}) }}">Afegir weamons</a>
                            <a href="{{ path('equip_edit', {'id': equip.id}) }}">Editar</a>
                            <a href="{{ path('equip_delete', {'id': equip.id}) }}" onclick="return eliminar('{{ equip.id }}')">Eliminar</a>
                          </td>
                      </tr>
                  {% else %}
                      <tr>
                          <td colspan="5">No hi ha equip.</td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>

          <br>

{% endblock %}