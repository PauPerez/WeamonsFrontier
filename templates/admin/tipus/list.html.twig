{% extends 'base.html.twig' %}

{% block title %}Llistat d'tipuss{% endblock %}
{% block body %}
{{ include('navbaradmin.html.twig') }}
<div style="margin-top:200px">
        <h1>Llistat de tipus</h1>
        <a class="btn btn-success" href="{{ path('tipus_new') }}">+ Nou tipus</a>
        <br><br>
        {% for message in app.flashes('notice') %}
              <strong><i> {{ message }} </i></strong>
        {% endfor %}

          <table class="table table-hover table-dark table-bordered" style="margin-top: 20px;margin-bottom: 10px;">
              <thead>
                  <tr>
                      <th>Nom</th><th>Debilitat</th><th>Fortalessa</th><th>Accions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for tipus in tipuses %}
                      <tr>
                          <td>{{ tipus.Nom }}</td><td>{{ tipus.debilidad.nom }}</td><td>{{ tipus.fortaleza.nom }}</td>
                          <td>
                            <a class="btn btn-primary" href="{{ path('tipus_edit', {'id': tipus.id}) }}">Editar</a>
                            <a class="btn btn-danger" href="{{ path('tipus_delete', {'id': tipus.id}) }}" onclick="return eliminar('{{ tipus.nom }}')">Eliminar</a>
                          </td>
                      </tr>
                  {% else %}
                      <tr>
                          <td colspan="5">No hi ha tipus.</td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>

          <br>
</div>
{% endblock %}