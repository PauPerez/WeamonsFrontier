{% extends 'base.html.twig' %}

{% block title %}Llistat d'Usuaris{% endblock %}
{% block javascripts %}
  <script src="{{ asset('js/backoffice.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
{{ include('navbaradmin.html.twig') }}
<div style="margin-top:200px">
        <h1>Llistat d'Usuaris</h1>
        <a href="{{ path('usuari_new') }}">+ Nou usuari</a>
        <br><br>
        {% for message in app.flashes('notice') %}
              <strong><i> {{ message }} </i></strong>
        {% endfor %}

          <table style="margin-top: 20px;margin-bottom: 10px;">
              <thead>
                  <tr>
                      <th>Username</th><th>Nom</th><th>Cognoms</th>
                  </tr>
              </thead>
              <tbody>
                  {% for usuari in usuaris %}
                      <tr>
                          <td>{{ usuari.Username }}</td><td>{% for rol in usuari.Roles %}
                              <p>{{ rol }}</p>
                          {% endfor %}</td><td><img src="{{ asset('img/' ~ usuari.Img) }}" style="width:200px"></td>
                          <td>
                            <a href="{{ path('usuari_edit', {'id': usuari.id}) }}">Editar</a>
                            <a href="{{ path('usuari_delete', {'id': usuari.id}) }}" onclick="return eliminar('{{ usuari.username }}')">Eliminar</a>
                          </td>
                      </tr>
                  {% else %}
                      <tr>
                          <td colspan="5">No hi ha usuaris.</td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>

          <br>
</div>
{% endblock %}