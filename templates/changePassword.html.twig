{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/changePassword.css') }}" type="text/css" rel="stylesheet" />
    <script src="{{ asset('javascript/changePassword.js') }}"></script>
{% endblock %}
{% block body %}
    <div class="padre_changePassword">
        <div class="container">
            <div class="div_changePassword">
                <form name="changePassword" action="{{ path('changePassword') }}" method="post">
                    <img class="img-fluid" id="logo_changePassword" src="{{ asset('./img/fondos/logo1.png') }}">
                    <div class="div_password_changePassword">
                        <input name="_email" type="text" class="form-control" id="email" value="{{ email }}" style="display: none;" />
                        <label for="password" class="form-label">Introduce la nueva contraseña</label><br>
                        <input name="_password" type="password" class="form-control" id="password" >
                        <a id="showPassword" onclick="mostrarContrasenya('password', 'showPassword')" class="btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                        <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                        <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/></svg></a>
                        <span class="error" id="_passwordError" style="color: red;"></span>
                    </div>
                    <div class="div_password_changePassword">
                        <label for="repeatPassword" class="form-label">Repite la nueva contraseña</label><br>
                        <input name="_repeatPassword" type="password" class="form-control" id="repeatPassword" >
                        <a id="showRepeatPassword" onclick="mostrarContrasenya('repeatPassword', 'showRepeatPassword')" class="btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                        <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                        <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/></svg></a>
                        <span class="error" id="_repeatPasswordError" style="color: red;"></span>
                    </div>
                    <div>
                        {% if error|default("") %}
                            <label style="color: red; margin-top: 0px; margin-bottom: 10px;">{{ error }}</label>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <p><a href="{{ path('login') }}">Volver a login</a></p>
                </form>
            </div>
        </div>
    </div>
    
{% endblock %}
