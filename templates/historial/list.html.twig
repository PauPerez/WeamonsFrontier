{% extends 'base.html.twig' %}

{% block title %}Llistat d'historials{% endblock %}
{% block body %}
        <h1>Llistat d'historials</h1>
        <a href="{{ path('historial_new') }}">+ Nou historial</a>
        <br><br>
        {% for message in app.flashes('notice') %}
              <strong><i> {{ message }} </i></strong>
        {% endfor %}

          <table style="margin-top: 20px;margin-bottom: 10px;">
              <thead>
                  <tr>
                      <th>Usuari</th><th>Contrincant</th><th>Victoria</th>
                  </tr>
              </thead>
              <tbody>
                  {% for historial in historials %}
                      <tr>
                          <td>{{ historial.getUsuari.Username }}</td><td>{{ historial.getContrincant.Username }}</td><td>{% if historial.Resultat == 0 %}No{% else %}Si{% endif %}</td>
                      </tr>
                  {% else %}
                      <tr>
                          <td colspan="5">No hi ha historial.</td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>

          <br>

{% endblock %}