{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/login.css') }}" type="text/css" rel="stylesheet" />
    <script src="{{ asset('javascript/login.js') }}"></script>
{% endblock %}
{% block body %}
    <div class="padre_login">
        <div class="container">
            <div class="div_login">
                <form name="login" action="{{ path('login') }}" method="post">
                    <img class="img-fluid" id="logo_login" src="{{ asset('./img/fondos/logo5.png') }}">
                    <div class="div_username_login">
                        <label for="username" class="form-label">Email de usuario</label><br>
                        <input type="text" name="_username" class="form-control" id="username" value="{{ last_username }}">
                        <span class="error" id="_usernameError" style="color: red;"></span>
                    </div>
                    <div class="div_password_login">
                        <label for="password" class="form-label">Contraseña</label><br>
                        <input name="_password" type="password" class="form-control" id="password" >
                        <a id="showPassword" onclick="mostrarContrasenya('password', 'showPassword')" class="btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                        <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                        <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/></svg></a>
                     <span class="error" id="_passwordError" style="color: red;"></span>
                    </div>
                    <div>
                        {% if error|default("") %}
                            <label style="color: red; margin-top: 0px; margin-bottom: 10px;">{{ error }}</label>
                            <p><a href="{{ path('emailChangePassword') }}">¿Has olvidado la contraseña?</a></p>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <p>¿No tienes una cuenta? &nbsp;<a href="{{ path('register') }}">Registrate aquí</a></p>
                </form>
            </div>
        </div>
    </div>
    
{% endblock %}
