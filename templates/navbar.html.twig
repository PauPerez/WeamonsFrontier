<!-- Navigation -->
<div>
	<nav>
		<ul class="menu">
			<li class="logo">
				<a href="{{ path('principal') }}" class="logo_navbar"><img class="img-fluid logo_navbar" src="{{ asset('./img/fondos/logo3.png') }}"></a>
			</li>
			<li class="item item_link">
				<a href="{{ path('principal') }}">Home</a>
			</li>
			<li class="item item_link">
				<a href="{{ path('pregame') }}">Combatir</a>
			</li>
			<li class="item item_link">
				<a href="{{ path('weadex') }}">Weadex</a>
			</li>
			{% if roles is defined %}
				{% for role in roles %}
					{% if role == "ROLE_ADMIN" %}
						<li class="item item_link">
							<a href="{{ path('admin_backoffice') }}">Backoffice</a>
						</li>
					{% endif %}
				{% endfor %}
			{% endif %}


			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
				<li class="item button"><a href="{{ path('perfil') }}">{{ username }}</a></li>
                <li class="item button secondary"><a href="{{ path('app_logout') }}">Cerrar la sesión</a></li>
			{% else %}
				<li class="item button"><a href="{{ path('login') }}">Inicia sesión</a></li>
                <li class="item button secondary"><a href="{{ path('register') }}">Crea una cuenta</a></li>
			{% endif %}
			<li class="toggle">
				<a href="#">
					<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-list" viewbox="0 0 16 16"><path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/></svg>
				</a>
			</li>
		</ul>
	</nav>
</div>

